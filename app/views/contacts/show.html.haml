
.page-header
  %h3 Contact Form

- if !@contact.errors.any? && @contact.referer && !current_page?(@contact.referer)
  #flash_info.alert.alert-info.animated.fadeInDown
    %button.close(type='button' data-dismiss='alert' aria-hidden=true) &times;
    Your message will mention you visited this page from
    %strong
      = @contact.referer

= form_for(@contact, :url => contact_path, :html => { :role => 'form', :class => 'form-horizontal' }) do |f|
  = f.hidden_field :referer
  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-8
      = f.text_field :name, autofocus: true, class: 'form-control'
  .form-group
    = f.label :email, class: 'col-sm-2 control-label'
    .col-sm-8
      = f.text_field :email, class: 'form-control'
  .form-group
    = f.label :body, class: 'col-sm-2 control-label'
    .col-sm-8
      = f.text_area :body, class: 'form-control', rows: 7
  .form-group
    .col-sm-offset-2.col-sm-8
      %button.btn.btn-default(type='submit')
        %i.fa.fa-mail-forward
        Send
      = image_tag 'sendgrid.png', height: 34, class: 'pull-right'
