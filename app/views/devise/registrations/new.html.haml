= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form', :class => 'form-horizontal'}, :wrapper => :horizontal_bootstrap, :defaults => { :label_html => { class: 'col-sm-3' } }) do |f|
  %legend
    Signup
  = f.error_notification
  = f.input :name, :input_html => { autofocus: true }
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  .form-group
    .col-sm-offset-3.col-sm-7
      %button.btn.btn-success(type='submit')
        %i.fa.fa-check
        Sign up
