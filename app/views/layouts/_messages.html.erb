<%# Rails flash messages styled for Bootstrap 3.0 %>
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <%- alert_class = name == :notice ? 'success' : 'danger' -%>
    <%= content_tag :div, id: "flash_#{name}", class: "alert alert-#{alert_class} animated fadeInDown" do %>
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <% if name == :notice %><i class="fa fa-check"></i><% end %>
      <%= content_tag :strong, msg %>
    <% end %>
  <% end %>
<% end %>
