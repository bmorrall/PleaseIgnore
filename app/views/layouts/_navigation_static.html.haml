/ navigation styled for Bootstrap 3.0
%nav.navbar.navbar-fixed-top{ role: 'nav', class: navbar_style }
  .container
    .navbar-header
      %button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-collapse')
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to application_name, root_url, class: 'navbar-brand'
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li{class: header_nav_class(root_path)}<
          = link_to 'Home', root_url
        %li{class: header_nav_class(page_path('styles'))}<
          = link_to 'Styles', page_path('styles')
        %li{class: header_nav_class(contact_path)}<
          = link_to 'Contact', contact_path
      %ul.nav.navbar-nav.navbar-right
        %li{class: header_nav_class(new_user_session_path)}<
          = link_to 'Login', new_user_session_url
