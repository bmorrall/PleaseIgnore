/ navigation styled for Bootstrap 3.0
%nav.navbar.navbar-default.navbar-fixed-top(role='nav')
  .container
    .navbar-header
      %button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-collapse')
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'PleaseIgnore', root_url, class: 'navbar-brand'
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li{class: header_nav_class(root_path)}<
          = link_to 'Home', root_url
        %li{class: header_nav_class(page_path('styles'))}<
          = link_to 'Styles', page_path('styles')
        %li{class: header_nav_class(contact_path)}<
          = link_to 'Contact', contact_path
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown{class:page_title=~/Account Management/i?'active':nil}
            %a.dropdown-toggle(href='#' data-toggle='dropdown')
              - cache [:v1, current_user, :navbar_tag], default_cache_params do
                - decorate current_user do |user|
                  = user.profile_image
                  = user.display_name
              &nbsp;
              %i.caret
            %ul.dropdown-menu
              %li
                = link_to 'My Account', edit_user_registration_path
              %li.divider
              %li
                = link_to 'Logout', destroy_user_session_path, method: 'delete'
        - else
          %li{class: header_nav_class(new_user_session_path)}<
            = link_to 'Login', new_user_session_path
          %li{class: header_nav_class(new_user_registration_path)}<
            = link_to 'Create Account', new_user_registration_path
